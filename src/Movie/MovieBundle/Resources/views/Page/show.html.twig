{% extends 'MovieMovieBundle::layout.html.twig' %}
{% block title %}{{ movie.title }} {% endblock %}
{% block sidebar %}
    <div class="container-fluid">
        {% if movie.imageFile %}
            <img src="{{ asset('uploads/images/') ~ movie.imageFile }}" class="img-fluid uploaded-image"
                 alt="Movie Poster"/>
        {% else %}
            {% image '@MovieMovieBundle/Resources/Images/image_2.jpg' %}
                <img src="{{ asset_url }}" style="width: 100%" class="uploaded-image" alt="Stock Movie image"/>
            {% endimage %}
        {% endif %}
    </div>
{% endblock %}
{% block body %}
    <h1>ID: {{ movie.id }}</h1>
    <h1>Title: {{ movie.title }}</h1>
    <h1>Rating: {{ movie.rating }}</h1>
    <h2>Storyline</h2>
    <p>{{ movie.summary }}</p>
    <h2>Director: {{ movie.director }}</h2>
    <h2>Actors: {{ movie.actors }}</h2>
    <h2>Running Time {{ movie.runningTime }}</h2>
    <hr>
    <hr>
    <div>
        <h1>Reviews</h1>
        <button class="btn btn-success pull-right mb-3"><a href="{{ path('movie_review',{'id': movie.id} ) }}">Add
                review</a>
        </button>
        {% if reviews %}
            <table class="table table-striped table-bordered border-3">
                <thead>
                <tr>
                    <th>Review_ID</th>
                    <th>Review</th>
                    <th>Reviewer_ID</th>
                    <th>Rating</th>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <th colspan="2">Actions</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for review in reviews %}
                    <tr>
                        <td>
                            {{ review.id }}
                        </td>
                        <td>
                            {{ review.review }}
                        </td>
                        <td>
                            {{ review.reviewer.id }}
                        </td>
                        <td>
                            {{ review.rating }}
                        </td>
                        <td>
                            {# if current user is the owner of this record, they can edit the review #}
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if app.user.id == review.reviewer.id %}
                                    <button class="btb btn-dark"><a
                                                href="{{ path('movie_review_edit',{'id': review.id} ) }}">Edit</a>
                                    </button>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {# display navigation #}
            <div class="navigation text-center">
                {{ knp_pagination_render(reviews) }}
            </div>
        {% else %}
            <p>No reviews to show</p>
        {% endif %}

    </div>
    <button class="btn btn-warning"><a href="/">Go back</a>
    </button>
{% endblock %}
