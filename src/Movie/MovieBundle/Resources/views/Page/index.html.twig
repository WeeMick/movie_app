{% extends 'MovieMovieBundle::layout.html.twig' %}
{% block body %}
    <p>Movie Rater homepage</p>
    <hr>
    {% if movies %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Review</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            {%  for movie in movies %}
                <tr>
                    <td>{{ movie.name }}
                    </td>
                    <td>
                        {{ movie.review }}
                    </td>
                    <td>
                        {{ movie.rating }}
                    </td>

                </tr>
            {%  endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No names</p>
    {% endif %}
{% endblock %}
